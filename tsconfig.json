{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "es2015",                
      "module": "commonjs",              
      "esModuleInterop": true, 
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "outDir": "dist",
      "resolveJsonModule": true,
      "noEmitOnError": true,
      "allowUnreachableCode": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "declaration": true,
      "jsx": "react",
      "lib": [ "es2015", "dom" ]
    },
    "files": [
      "src/index.ts" 
    ],
    "include": [
      "src",
      "test",
      "index.ts"
    ],
    "exclude": [
      "node_modules/**",
      "packages/*/node_modules/**"
    ]
  }